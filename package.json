{
  "name": "forum-nodejs-api",
  "version": "1.0.0",
  "main": "build/app.js",
  "engines": {
    "node": "20.x"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src --out-dir build",
    "start": "node -r tsconfig-paths/register build/app.js",
    "start:dev": "tsx watch src/app.ts",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "lint": "eslint --ext .ts src",
    "test": "vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "test:e2e": "vitest run --dir src/http",
    "test:e2e:watch": "vitest --dir src/http",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage src",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy"
  },
  "keywords": [],
  "author": "Franklin Borges",
  "license": "ISC",
  "description": "Create questions and answers with this Forum API",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.722.0",
    "@aws-sdk/lib-storage": "^3.722.0",
    "@aws-sdk/s3-request-presigner": "^3.722.0",
    "@fastify/autoload": "^6.0.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^9.0.2",
    "@fastify/multipart": "^9.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@prisma/client": "^6.1.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fastify-swagger": "^5.1.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
